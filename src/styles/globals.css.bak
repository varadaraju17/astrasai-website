/* Design System */
@import "@fontsource/space-grotesk/700.css";
@import "@fontsource/space-grotesk/400.css";
@import "@fontsource/syne/800.css";
@import "@fontsource/syne/600.css";

@tailwind base;
@tailwind components;
@tailwind utilities;

/* Design tokens */
:root {
  /* Core colors */
  --bg-primary: #030014; /* Deep space background */
  --bg-secondary: #0A0A0F;
  --surface-dark: rgba(16, 16, 24, 0.95);
  --surface-light: rgba(255, 255, 255, 0.03);
  
  /* Text colors */
  --text-primary: #F0F0FF;
  --text-secondary: rgba(240, 240, 255, 0.8);
  --text-muted: rgba(240, 240, 255, 0.6);
  
  /* Brand colors */
  --accent-1: #FF3366; /* Neon pink */
  --accent-2: #7000FF; /* Electric purple */
  --accent-3: #00F0FF; /* Cyber blue */
  
  /* UI elements */
  --radius-sm: 4px;
  --radius-md: 12px;
  --radius-lg: 24px;
  --container-pad: 2rem;
  
  /* Typography */
  --font-display: 'Syne', system-ui, -apple-system, sans-serif;
  --font-body: 'Space Grotesk', system-ui, -apple-system, sans-serif;
  
  /* Animations */
  --transition-fast: 0.2s cubic-bezier(0.4, 0, 0.2, 1);
  --transition-smooth: 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  --transition-bounce: 0.5s cubic-bezier(0.68, -0.6, 0.32, 1.6);
}

@keyframes float {
  0%, 100% { transform: translateY(0) translateX(0) rotate(0deg); }
  25% { transform: translateY(-8px) translateX(4px) rotate(2deg); }
  50% { transform: translateY(4px) translateX(-4px) rotate(-1deg); }
  75% { transform: translateY(-4px) translateX(6px) rotate(1deg); }
}

@keyframes pulse {
  0%, 100% { opacity: 0.5; }
  50% { opacity: 1; }
}

@keyframes fadeUp {
  from { opacity: 0; transform: translateY(10px); }
  to { opacity: 1; transform: translateY(0); }
}

@keyframes gradientFlow {
  0% { background-position: 0% 50%; }
  50% { background-position: 100% 50%; }
  100% { background-position: 0% 50%; }
}

.animate-float { 
  animation: float 8s ease-in-out infinite;
  border-radius: 50%;
  filter: brightness(1.2);
}

.animate-pulse-slow {
  animation: pulse 4s ease-in-out infinite;
}

.animate-fade-up { 
  animation: fadeUp .6s ease forwards;
  will-change: transform, opacity;
}

html, body { height:100%; }
body {
  background: var(--bg);
  color: var(--text);
  font-family: var(--font-body);
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

/* Headings use display font */
h1,h2,h3,h4,h5 { 
  font-family: var(--font-heading);
  color: var(--text);
  letter-spacing: -0.02em;
}

.gradient-mesh { 
  background-image: 
    radial-gradient(circle at top right, rgba(30, 144, 255, 0.15) 0%, transparent 70%),
    radial-gradient(circle at center, rgba(147, 51, 234, 0.1) 0%, transparent 60%),
    radial-gradient(circle at bottom left, rgba(30, 144, 255, 0.12) 0%, transparent 70%);
  background-size: 200% 200%;
  animation: gradientFlow 15s ease infinite;
}

.glass { 
  backdrop-filter: blur(12px);
  background: rgba(255, 255, 255, 0.03);
  border: 1px solid rgba(255, 255, 255, 0.05);
  box-shadow: 0 8px 32px rgba(2, 6, 23, 0.2);
}

.btn-primary { 
  position: relative;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 0.75rem 1.5rem;
  border-radius: 9999px;
  font-weight: 600;
  color: #fff;
  background: linear-gradient(135deg, var(--primary), var(--accent));
  background-size: 200% 200%;
  animation: gradientFlow 8s ease infinite;
  box-shadow: 
    0 6px 18px rgba(30, 144, 255, 0.2),
    0 0 0 1px rgba(255, 255, 255, 0.1);
  transition: all .3s ease;
}

.btn-primary:hover { 
  transform: translateY(-2px);
  box-shadow: 
    0 10px 30px rgba(30, 144, 255, 0.3),
    0 0 0 1px rgba(255, 255, 255, 0.2);
}

.card { 
  border-radius: var(--radius);
  background: var(--surface);
  border: 1px solid rgba(255, 255, 255, 0.05);
  padding: 1.5rem;
  box-shadow: 
    0 8px 24px rgba(2, 6, 23, 0.12),
    0 0 0 1px rgba(255, 255, 255, 0.05);
  transition: all .3s ease;
}

.card:hover { 
  transform: translateY(-6px);
  box-shadow: 
    0 14px 40px rgba(2, 6, 23, 0.16),
    0 0 0 1px rgba(255, 255, 255, 0.1);
}

.nav-link { 
  position: relative;
  transition: color .3s ease;
}

.nav-link::after { 
  content: '';
  position: absolute;
  left: 0;
  bottom: -6px;
  height: 2px;
  width: 0;
  background: linear-gradient(90deg, var(--primary), var(--accent));
  transition: width .3s ease;
}

.nav-link:hover::after { 
  width: 100%;
}
